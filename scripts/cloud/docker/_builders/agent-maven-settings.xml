<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <activeProfiles>
        <activeProfile>jakarta-ee-version-override</activeProfile>
        <activeProfile>graphene-version-override</activeProfile>
        <activeProfile>shiro-version-override</activeProfile>
        <activeProfile>hope-repository</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>jakarta-ee-version-override</id>
            <properties>
                <jakartaee.version>10.0.0-lp-nov6</jakartaee.version>
                <jakarta.ee.version>${jakartaee.version}</jakarta.ee.version>
            </properties>
        </profile>

        <profile>
            <id>graphene-version-override</id>
            <properties>
                <arquillian.drone.version>3.0.0-alpha.8-lp-jan7</arquillian.drone.version>
                <arquillian.graphene.version>3.0.0-alpha.4-lp-jan7</arquillian.graphene.version>
            </properties>
        </profile>

        <profile>
            <id>shiro-version-override</id>
            <properties>
                <shiro2.version>2.0.0-lp-jan11</shiro2.version>
            </properties>
        </profile>

        <profile>
            <id>hope-repository</id>
            <repositories>
                <repository>
                    <id>hope-repository</id>
                    <url>https://nexus.hope.nyc.ny.us/repository/maven-releases</url>
                    <releases>
                        <enabled>true</enabled>
                        <checksumPolicy>fail</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>
